<h1>Welcome To Portfolio</h1>

<h3>Search</h3>

<div id="stock-lookup"

     <%= form_tag "#", method: :get, id:"stock-lookup-form" %>

          <div class="form-group row no-padding text-center col-md-12">

            <div class="col-md-10">

              <%= text_field_tag :stock, params[:stock], placeholder: "Symbol", class: "form-control search-box input-lg", autofocus: true %>

            </div>

            <div class="col-md-2">
              <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                <i class="fa fa-search"></i> Search Stock
              <% end %>

            </div>

          </div>


</div>